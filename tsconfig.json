{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./build",
    "outFile":"./build/build.js",
    "sourceRoot": "./src/",
    "rootDir": "./src/",
    "sourceMap": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es6",
    "module": "amd",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "lib": [
    "es6",
    "es7",
    "dom"
  ],
  "baseUrl": "./",
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "test"
  ]
}
