{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "lib": [
    "es6",
    "es7",
    "dom"
  ],
  "baseUrl": ".",
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
